<?xml version='1.0' encoding='utf-8'?>
<widget id="com.yellowin.ttt" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ttt</name>
    <description>Sample Apache Cordova App</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />


    <platform name="android">
        <preference name="android-targetSdkVersion" value="33" />
        <resource-file src="build-extras.gradle" target="app/build-extras.gradle" />
        
        <preference name="AndroidXEnabled" value="true" />
        <preference name="GradlePluginKotlinEnabled" value="true" />
        
     <!-- <preference name="LottieRemoteEnabled" value="true" /> -->
      <!-- <preference name="LottieAnimationLocationLight" value="https://www.appcake.co.kr/mobile/lottie1.json" /> -->
    </platform>
    <platform name="ios">
     <preference name="LottieRemoteEnabled" value="true" />
      <preference name="LottieAnimationLocationLight" value="https://www.appcake.co.kr/mobile/lottie1.json" />
      <preference name="LottieHideTimeout" value="3" />
      <!-- <preference name="LottieLoopAnimation" value="true" /> -->
      <!-- <preference name="LottieFullScreen" value="true" /> -->
      </platform>

</widget>
